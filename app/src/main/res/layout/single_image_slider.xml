<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgSelectedImg"
        android:scaleType="fitCenter"
        android:src="@drawable/funny"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    <CheckBox
        android:id="@+id/ckBookmarkSave"
        android:layout_marginTop="20dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:checked="false"
        android:background="@color/transparent_red"
        android:button="@drawable/selector_save_image"
        android:gravity="center|start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></CheckBox>
    <LinearLayout
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/transparent_white"
        android:layout_margin="10dp"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgProfile"
            android:layout_gravity="center"
            android:src="@drawable/bird">
        </de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:text="by. Nishant Abhishek"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvDescription"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:text="by. Nishant Abhishek by. Nishant Abhishek by. Nishant Abhishek by. Nishant Abhishek by. Nishant Abhishek by. Nishant Abhishek"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>